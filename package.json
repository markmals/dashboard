        "@remix-run/serve": "2.12.0",
        "@std/path": "npm:@jsr/std__path@^1.0.6",
        "@std/yaml": "npm:@jsr/std__yaml@^1.0.5",
        "@vercel/remix": "^2.12.0",
        "clsx": "^2.1.1",
        "framer-motion": "^11.2.10",
        "isbot": "^4.1.0",
        "marked": "^14.1.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "zod": "^3.23.8",
        "zod-to-json-schema": "^3.23.3"
    },
    "devDependencies": {

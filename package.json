        "printWidth": 100,
        "tabWidth": 4,
        "arrowParens": "avoid",
        "singleQuote": false,
        "semi": false,
        "plugins": [
            "prettier-plugin-tailwindcss"
        ]
    },
    "engines": {
        "node": ">=20.0.0"
    }
